generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Subject {
  pendaftaran
  akademik
  fasilitas
  ekstrakurikuler
  beasiswa
  umum
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  subject   Subject
  message   String
  createdAt DateTime @default(now())
}
